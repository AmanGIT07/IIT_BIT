<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.iitbit.LockScreenThree">
    <TextView
        android:id="@+id/tv_titleLSthree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New PIN"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30sp"/>
    <TextView
        android:id="@+id/tv_subTitleLSthree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter new pin"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/et_LoackScreenThreePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:gravity="center"
        android:inputType="numberPassword"
        android:maxLength="4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Re-enter new pin"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/et_LoackScreenThreeConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:gravity="center"
        android:inputType="numberPassword"
        android:maxLength="4" />

    <Button
        android:id="@+id/btn_LockScreenThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save PIN"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="normal" />
</LinearLayout>
